<Window x:Class="GestionProductos.Views.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionProductos.Views"
        mc:Ignorable="d"
        Title="Autenticación" 
        Height="600" 
        Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Colores principales -->
        <SolidColorBrush x:Key="PrimaryBlue" Color="#2563EB"/>
        <SolidColorBrush x:Key="DarkBlue" Color="#1E40AF"/>
        <SolidColorBrush x:Key="LightBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="BackgroundWhite" Color="#FAFAFA"/>
        <SolidColorBrush x:Key="CardWhite" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextDark" Color="#1F2937"/>
        <SolidColorBrush x:Key="TextGray" Color="#6B7280"/>
        <SolidColorBrush x:Key="BorderGray" Color="#E5E7EB"/>

        <!-- Estilo para TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource CardWhite}"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource LightBlue}" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlue}" TargetName="border"/>
                                <Setter Property="BorderThickness" Value="2" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para PasswordBox -->
        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="{StaticResource CardWhite}"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5,1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource LightBlue}" TargetName="border"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource PrimaryBlue}" TargetName="border"/>
                                <Setter Property="BorderThickness" Value="2" TargetName="border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para botón principal -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Border.Effect>
                                <DropShadowEffect Color="#000000" 
                                                BlurRadius="8" 
                                                ShadowDepth="2" 
                                                Opacity="0.1" 
                                                Direction="270"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource DarkBlue}" TargetName="border"/>
                                <Setter Property="Effect" TargetName="border">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#000000" 
                                                        BlurRadius="12" 
                                                        ShadowDepth="4" 
                                                        Opacity="0.15" 
                                                        Direction="270"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource DarkBlue}" TargetName="border"/>
                                <Setter Property="Effect" TargetName="border">
                                    <Setter.Value>
                                        <DropShadowEffect Color="#000000" 
                                                        BlurRadius="4" 
                                                        ShadowDepth="1" 
                                                        Opacity="0.1" 
                                                        Direction="270"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para botón secundario -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource DarkBlue}"/>
                                <Setter Property="Background" Value="#F0F4FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo para etiquetas -->
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- Estilo para título -->
        <Style TargetType="TextBlock" x:Key="TitleStyle">
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#FAFAFA" Offset="0"/>
                <GradientStop Color="#F3F4F6" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="40,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Logo central -->
                <Border Grid.Row="0" 
                        Width="60" 
                        Height="60" 
                        CornerRadius="12"
                        Background="{StaticResource PrimaryBlue}"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20">
                    <TextBlock Text="👤" 
                             Foreground="White" 
                             FontSize="24" 
                             FontWeight="Bold"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"/>
                </Border>

                <!-- Botón para cambiar modo -->
                <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Button Command="{Binding ToggleModeCommand}" Style="{StaticResource SecondaryButton}">
                        <Button.Content>
                            <TextBlock>
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Text" Value="¿No tienes cuenta? Regístrate"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsLoginMode}" Value="False">
                                                <Setter Property="Text" Value="¿Ya tienes cuenta? Inicia sesión"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Button.Content>
                    </Button>
                </StackPanel>

                <!-- Formulario de Login -->
                <Border Grid.Row="2" 
                        Background="{StaticResource CardWhite}"
                        CornerRadius="12"
                        Padding="5"
                        Visibility="{Binding IsLoginMode, Converter={StaticResource BoolToVis}}">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" 
                                        BlurRadius="20" 
                                        ShadowDepth="5" 
                                        Opacity="0.08" 
                                        Direction="270"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Bienvenido de nuevo" Style="{StaticResource TitleStyle}" Margin="0,0,0,8"/>
                        <TextBlock Text="Ingresa tus credenciales para continuar" 
                                 Foreground="{StaticResource TextGray}"
                                 FontSize="13"
                                 HorizontalAlignment="Center"
                                 Margin="0,0,0,30"/>

                        <TextBlock Text="Correo electrónico" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding Correo, UpdateSourceTrigger=PropertyChanged}" 
                               Margin="0,0,0,16"/>

                        <TextBlock Text="Contraseña" Style="{StaticResource LabelStyle}"/>
                        <PasswordBox x:Name="LoginPasswordBox" 
                                   Margin="0,0,0,24"/>

                        <Button Content="Iniciar Sesión" 
                              Style="{StaticResource PrimaryButton}"
                              Click="Login_Click"/>
                    </StackPanel>
                </Border>

                <!-- Formulario de Registro -->
                <Border Grid.Row="2" 
                        Background="{StaticResource CardWhite}"
                        CornerRadius="12"
                        Padding="5">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsLoginMode}" Value="False">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" 
                                        BlurRadius="20" 
                                        ShadowDepth="5" 
                                        Opacity="0.08" 
                                        Direction="270"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Crear nueva cuenta" Style="{StaticResource TitleStyle}" Margin="0,0,0,8"/>
                        <TextBlock Text="Completa el formulario para registrarte" 
                                 Foreground="{StaticResource TextGray}"
                                 FontSize="13"
                                 HorizontalAlignment="Center"
                                 Margin="0,0,0,30"/>

                        <TextBlock Text="Nombre de usuario" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding NombreUsuario, UpdateSourceTrigger=PropertyChanged}" 
                               Margin="0,0,0,16"/>

                        <TextBlock Text="Apellido (opcional)" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding Apellido, UpdateSourceTrigger=PropertyChanged}" 
                               Margin="0,0,0,16"/>

                        <TextBlock Text="Correo electrónico" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Text="Ejemplo(Juan@gmail.com)" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding Correo, UpdateSourceTrigger=PropertyChanged}" 
                               Margin="0,0,0,16"/>

                        <TextBlock Text="Teléfono" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Text="Ejemplo(1234-1234)" Style="{StaticResource LabelStyle}"/>
                        <TextBox Text="{Binding Telefono, UpdateSourceTrigger=PropertyChanged}" 
                               Margin="0,0,0,16" MaxLength="9" />

                        <TextBlock Text="Contraseña" Style="{StaticResource LabelStyle}"/>
                        <TextBlock Text="Al menos 8 caracteres" Style="{StaticResource LabelStyle}"/>
                        <PasswordBox x:Name="SignupPasswordBox" 
                                   Margin="0,0,0,24"/>

                        <Button Content="Crear Cuenta" 
                              Style="{StaticResource PrimaryButton}"
                              Click="Register_Click"/>
                    </StackPanel>
                </Border>

                <!-- Mensaje de error -->
                <TextBlock Grid.Row="3" 
                         Foreground="#EF4444" 
                         TextAlignment="Center" 
                         Text="{Binding Error}"
                         FontSize="13"
                         Margin="0,16,0,0"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>